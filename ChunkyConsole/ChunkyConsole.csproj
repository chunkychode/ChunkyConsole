<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netstandard2.0;net7.0;net48</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>ChunkyConsole</Title>
    <PackageProjectUrl>https://github.com/chunkychode/ChunkyConsole</PackageProjectUrl>
    <Copyright>ChunkyChode 2023</Copyright>
    <PackageIcon>Chode.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/chunkychode/ChunkyConsole</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>console</PackageTags>
    <Description>Simple console framework</Description>
    <AssemblyVersion>2.0.1</AssemblyVersion>
    <FileVersion>2.0.1</FileVersion>
    <Version>2.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Chode.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
